{
  "name": "@diablo2/core",
  "version": "0.0.1",
  "private": true,
  "repository": "git@github.com:blacha/diablo2.git",
  "author": {},
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "bump": "npx lerna version --conventional-commits --no-push --sign-git-commit --sign-git-tag -m 'release: %s'",
    "lint": "eslint 'packages/*/src/**/*.ts' --quiet --fix --report-unused-disable-directives",
    "clean": "tsc -b --clean && rimraf 'packages/*/build'",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@types/node": "^14.6.2",
    "@types/ospec": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "lerna": "^3.22.1",
    "ospec": "^4.0.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "typescript": "^4.0.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
